<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="251dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:backgroundTint="@color/white"
    android:id="@+id/view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="25dp"
                android:backgroundTint="@color/white"
                android:elevation="2dp">
                <ImageView
                    android:id="@+id/imagefolover"
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/folovertrue"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/smart" />
            </RelativeLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/priceNewe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="7dp"
                android:text="$1,047"
                android:textColor="@color/basic_Blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:fontFamily="@font/mark_pro" />

            <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Price"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        app:fontFamily="@font/mark_pro" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="@color/basic_Blue"
                android:text="Samsung Note 20 Ultra"
                app:fontFamily="@font/mark_pro"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>